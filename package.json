{
    "name": "Kirara",
    "version": "1.0.0",
    "description": "Suika2 Kirara is a visual editor for Suika2 Visual Novel Engine.",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [],
    "author": "Keiichi Tabata",
    "license": "ISC",
    "devDependencies": {
        "electron": "^22.0.0",
        "electron-builder": "^22.10.3"
    },
    "build": {
        "appId": "com.suika2.kirara",
        "directories": {
            "output": "dist"
        },
        "files": [
            "assets",
            "src",
            "package.json",
            "package-lock.json"
        ],
        "mac": {
            "icon": "assets/mac/suika.icns",
            "target": [
                "dmg"
            ]
        },
        "win": {
            "icon": "assets/win/suika.ico",
            "target": "nsis",
            "publisherName": "Open Source Developer, Keiichi Tabata"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}
